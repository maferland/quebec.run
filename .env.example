# Server
PORT=3000

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/courses?schema=public"

# NextAuth
NEXTAUTH_SECRET="your-32-character-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Email configuration
EMAIL_FROM="noreply@yourdomain.com"
USE_RESEND=false

# Development (Mailhog) - used when USE_RESEND=false
EMAIL_SERVER_HOST="localhost"
EMAIL_SERVER_PORT="1025"
EMAIL_SERVER_USER=""
EMAIL_SERVER_PASSWORD=""

# Mailhog Docker ports (optional, for docker-compose)
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025

# Production (Resend) - required when USE_RESEND=true or NODE_ENV=production
# Get your API key from https://resend.com/api-keys
# RESEND_API_KEY="re_your_api_key_here"